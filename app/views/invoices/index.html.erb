<h1 class="text-center">Customer Invoices</h1>
<hr/>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <ul class='list-inline'>
          <li><h4><%= invoice.title %></h4></li>
          <li>&nbsp;</li>
          <li><%= link_to 'Show', invoice, class: "btn btn-default" %></li>
          <% if current_user.admin? %>
          <li><%= link_to 'Edit', edit_invoice_path(invoice), class: "btn btn-default" %></li>
          <li><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></li>
          <% end %>
        </ul>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

  <%= link_to 'New Invoice', new_invoice_path %>